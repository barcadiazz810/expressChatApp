<div class="col-md-4 col-md-offset-4">
  <center><h3>Sign-In</h3></center>
  {{#if hasErrors}}
  <div class="alert alert-danger">
    {{#each messages }}
      <p>{{ this }}</p>
    {{/each}}
  </div>
  {{/if}}
  <div class="form-group">
    <form class="" action="/user/signin" method="post">
      <input type="text" name="email" class="form-control" value="" placeholder="Email">
      <br>
      <input type="password" name="password" class="form-control" value="" placeholder="Password">
      <br>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <center><button type="submit" class="btn btn-primary" name="button">Sign-In</button></center>
        </div>
        <div class="col-md-1">
          <label for="">Or</label>
        </div>
        <div class="col-md-4">
          <center><a href="/user/signup"><button type="button" class="btn btn-primary" name="button">Sign-Up</button></a></center>
        </div>
      </div>
    </form>
  </div>
</div>
